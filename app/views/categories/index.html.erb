<br>
<div class="container">
  <div class="row justify-content-md-center">
    <h1><%= t("label.category") %></h1>
  </div>

  <% if @category %>
    <% provide(:button_text, @category.id ? t("form.post") : t("link.create")) %>
    <div class="col-md-6 offset-md-3">
      <%= render "form" %>
      <hr>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 offset-md-1">
      <%= link_to t("link.add_menu"), new_category_path, class: "btn btn-info" %>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th><%= t("label.name") %></th>
            <th><%= "Parent" %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each_with_index do |category, i| %>
            <%= render "category", category: category,
              counter: counter_per_page(i, params[:page], Settings.users.per_page) %>
          <% end %>
        </tbody>
      </table>
      <div class="row justify-content-md-center">
        <p><%= will_paginate %></p>
      </div>
    </div>
  </div>
</div>
