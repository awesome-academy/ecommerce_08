<div class="row">
  <div class="col-md-5 offset-md-3">
    <h1><%= t("devise.password.change") %></h1>
    </br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), method: :PUT) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t("form.password") %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t("form.pass_confirm") %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.password.change"), class: "btn btn-primary" %>
      </div>
    <% end %>
    </br>
    <%= render "devise/shared/links" %>
  </div>
</div>
