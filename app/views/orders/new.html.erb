<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="text-center"><h1>Payment</h1></div>
      <%= form_for @order do |f| %>
        <%= render "shared/error_messages", object: @order %>

        <div class="form-group">
          <%= f.label :reciever_name, t("form.name") %>
          <%= f.text_field :reciever_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :phone, t("form.phone") %>
          <%= f.telephone_field :phone, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :address, t("form.address") %>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="text-center">
          <%= f.submit t("form.pay"), class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
</div>
